@model IEnumerable<Exchange.Models.Prestamo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="SelectCriptomonedaForPrestamo" asp-controller="Criptomonedas" id="SelectCriptomonedaForPrestamo">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaPrestamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TasaInteres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPrestamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasaInteres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrestamoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrestamoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrestamoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
